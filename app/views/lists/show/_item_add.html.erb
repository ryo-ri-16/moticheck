<div class="mt-4 mb-4 p-3 bg-white rounded-lg border border-gray-200 shadow-sm">
  <h3 class="text-lg font-semibold mb-3 text-gray-700">アイテムを追加</h3>
  <%= form_with model: [@list, ListItem.new], local: true do |f| %>
    <div class="mb-3">
      <%= f.text_field :item_name,
        placeholder: "アイテム名",
        autofocus: true,
        class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 #{@list_item&.errors&.include?(:item_name) ? 'border-red-500' : 'border-gray-300'}" %>
    </div>

    <div class="flex items-center gap-2">
      <div class="flex items-center gap-2">
        <%= f.label :quantity, '数量:', class: "text-sm text-gray-600 whitespace-nowrap" %>
        <%= f.number_field :quantity, min: 1, max: 999,
              class: "w-20 px-2 py-2 border rounded-md" %>
      </div>

      <%= f.submit "追加",
        class: "flex-1 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>
