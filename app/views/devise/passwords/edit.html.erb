<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="w-full max-w-md space-y-8">

    <div class="text-center space-y-4">
      <div class="flex justify-center">
        <div class="h-16 w-16 rounded-2xl bg-blue-600 flex items-center justify-center">
          <span class="text-white text-3xl">🔒</span>
        </div>
      </div>
      <h1 class="text-3xl font-bold">パスワード変更</h1>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-2xl font-bold text-center mb-1">新しいパスワードを設定</h2>
      <p class="text-center text-gray-500 mb-6">安全なパスワードに更新してください</p>

      <%= form_with model: resource, url: password_path(resource_name), method: :put, class: "space-y-4" do |f| %>
        
        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-2 text-center">
          <%= f.label :password, "新しいパスワード", class: "block font-medium" %>
          <%= f.password_field :password, required: true,
                class: "border p-2 w-full rounded" %>
        </div>

        <div class="space-y-2 text-center">
          <%= f.label :password_confirmation, "パスワード確認", class: "block font-medium" %>
          <%= f.password_field :password_confirmation, required: true,
                class: "border p-2 w-full rounded" %>
        </div>

        <div class="space-y-2 text-center">
          <%= f.submit "パスワードを更新",
              class: "w-full bg-blue-600 text-white py-3 rounded-lg text-lg font-semibold" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to "ログイン画面へ戻る",
              new_user_session_path,
              class: "text-sm text-gray-500 hover:text-blue-600" %>
      </div>

    </div>

  </div>
</div>
