<div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow relative">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <%= link_to list_template_path(list_template), class: "block" do %>
        <h3 class="font-semibold text-lg mb-2"><%= list_template.title %></h3>

        <% if list_template.category.present? %>
          <span class="inline-block px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 mb-2">
            <%= list_template.category.name %>
          </span>
        <% end %>

        <p class="text-sm text-gray-600">
          <%= list_template.list_template_items.count %>個のアイテム
        </p>
      <% end %>
    </div>

    <%= render "list_templates/action_menu",
          list_template: list_template,
          deletable: !list_template.is_initial %>
  </div>
</div>
