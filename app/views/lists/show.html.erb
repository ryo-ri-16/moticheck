<%= render "lists/show/header", list: @list %>

<%= render "lists/show/list_info", list: @list %>

<% if @list.waiting? %>
  <%= render "lists/show/item_add", list: @list, list_item: @list_item %>
<% end %>

<%= render "lists/show/items_check",
          list: @list,
          list_items: @list_items %>

<% if @list.note.present? %>
  <%= render "lists/show/note", list: @list %>
<% end %>

<%= render "lists/show/action_buttons",
          list: @list,
          list_items: @list_items %>