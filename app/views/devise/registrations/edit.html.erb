<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="w-full max-w-md space-y-8">

    <!-- タイトル -->
    <div class="text-center space-y-2">
      <h1 class="text-3xl font-bold">アカウント設定</h1>
      <p class="text-gray-500 text-sm">登録情報の変更ができます</p>
    </div>

    <!-- カード -->
    <div class="bg-white rounded-xl shadow p-6 space-y-6">

      <%= form_for(resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { method: :put }) do |f| %>

        <% if resource.errors.any? %>
          <div class="bg-red-100 text-red-700 p-3 rounded">
            <ul class="text-sm ml-4 list-disc">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- メール -->
        <div class="space-y-1">
          <%= f.label :email, "メールアドレス", class: "font-medium" %>
          <%= f.email_field :email, class: "w-full border p-2 rounded", required: true %>
        </div>

        <!-- 新しいパスワード -->
        <div class="space-y-1">
          <%= f.label :password, "新しいパスワード（変更する場合のみ）", class: "font-medium" %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full border p-2 rounded" %>
        </div>

        <!-- パスワード確認 -->
        <div class="space-y-1">
          <%= f.label :password_confirmation, "パスワード確認", class: "font-medium" %>
          <%= f.password_field :password_confirmation,
                class: "w-full border p-2 rounded" %>
        </div>

        <!-- 現在のパスワード -->
        <div class="space-y-1">
          <%= f.label :current_password, "現在のパスワード（必須）", class: "font-medium" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
                class: "w-full border p-2 rounded", required: true %>
          <p class="text-xs text-gray-500">※ パスワード変更やメール変更には現在のパスワードが必要です</p>
        </div>

        <div>
          <%= f.submit "変更を保存する",
                class: "w-full bg-blue-600 text-white py-3 rounded-lg font-semibold" %>
        </div>
      <% end %>

      <!-- アカウント削除 -->
      <div class="text-center pt-4 border-t">
        <%= button_to "アカウントを削除する",
              registration_path(resource_name),
              method: :delete,
              data: { confirm: "本当に削除しますか？" },
              class: "mt-2 w-full py-3 border rounded-lg text-red-600 font-medium hover:bg-red-50" %>
      </div>

      <!-- 戻る -->
      <div class="text-center">
        <%= link_to "戻る", root_path, class: "text-blue-600 hover:underline text-sm" %>
      </div>
    </div>

  </div>
</div>
