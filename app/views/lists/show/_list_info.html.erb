<div class="bg-white rounded-lg shadow-sm p-4 space-y-3">
  <div class="flex items-center gap-2">
    <span class="text-sm font-medium text-gray-600 min-w-[60px]">状態</span>
    <span class="px-2 py-1 rounded text-sm text-white <%= status_color(@list.status) %>">
      <%= translated_status(@list) %>
    </span>
  </div>

  <div class="text-gray-600">
    <% if @list.scheduled_on && @list.scheduled_time %>
      <% datetime = Time.zone.local(
        @list.scheduled_on.year,
        @list.scheduled_on.month,
        @list.scheduled_on.day,
        @list.scheduled_time.hour,
        @list.scheduled_time.min
      )%>
      <%= l datetime, format: :short %> 利用
    <% elsif @list.scheduled_on.present? %>
      <%= l @list.scheduled_on, format: :long %> 利用
    <% else %>
      利用日未定
    <% end %>
  </div>

  <% if @list.priority? %>
    <div class="flex items-center gap-2">
      <span class="text-sm font-medium text-gray-600 min-w-[60px]">優先度</span>
      <span class="text-xs px-2 py-1 rounded bg-red-100 text-red-700">
        高
      </span>
    </div>
  <% end %>
</div>
