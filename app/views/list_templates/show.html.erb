<% content_for(:back_path) { list_templates_path } %>
<% content_for :title, @list_template.title %>

<div class="container py-4 pb-24">
  <div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-start justify-between mb-6">
      <div class="flex-1">
        <h1 class="text-2xl font-bold mb-2"><%= @list_template.title %></h1>
        <h2 class="text-lg font-semibold mb-4">テンプレート情報</h2>

        <% if @list_template.category %>
          <span class="inline-block px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700">
            <%= @list_template.category.name %>
          </span>
        <% end %>

        <% if @list_template.description.present? %>
          <p class="text-gray-600 mt-4"><%= @list_template.description %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <h2 class="text-lg font-semibold mb-4">
        アイテム (<%= @template_items.count %>)
      </h2>

      <% if @template_items.any? %>
        <div class="space-y-2">
          <% @template_items.each do |item| %>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded hover:bg-gray-100 transition-colors">
              <div class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-white rounded-full text-sm text-gray-600">
                <%= item.position %>
              </div>
              <div class="flex-1">
                <p class="font-medium"><%= item.name %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <%= render "shared/empty_state", message: "アイテムがありません" %>
      <% end %>
    </div>
  </div>

  <div class="flex gap-2 mt-4 opacity-90">
    <%= button_to "リストへコピー",
        to_lists_list_template_path(@list_template), method: :post,
        class: "flex-1 min-w-[140px] px-4 py-2 border border-gray-300 hover:bg-gray-50 rounded-md text-center font-medium transition-colors" %>

    <% if @list_template.user_id == current_user.id && !@list_template.is_initial? %>
      <%= button_to "削除",
        list_template_path(@list_template),
          method: :delete, data: { turbo_confirm: "本当に削除しますか?" },
          class: "flex-1 min-w-[140px] px-4 py-2 text-red-600 border border-red-300 hover:bg-red-50 rounded-md font-medium transition-colors" %>
    <% end %>
  </div>
</div>
