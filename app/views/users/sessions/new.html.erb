<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="w-full max-w-md space-y-8">

    <!-- タイトル -->
    <div class="text-center space-y-4">
      <div class="flex justify-center">
        <div class="h-16 w-16 rounded-2xl bg-blue-600 flex items-center justify-center">
          <span class="text-white text-3xl">✔</span>
        </div>
      </div>
      <h1 class="text-3xl font-bold">持ちチェク</h1>
    </div>

    <!-- カード -->
    <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow p-6">
      <h2 class="text-2xl font-bold text-center mb-1">ログイン</h2>
      <p class="text-center text-gray-500 mb-6">アカウントにログインしてください</p>

      <%= form_with scope: :user, url: session_path(:user), class: "space-y-4" do |f| %>

        <div>
          <%= f.label :email, "メールアドレス", class: "block font-medium mb-1" %>
          <%= f.email_field :email, autofocus: true, required: true,
                class: "border p-3 w-full rounded-lg" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "block font-medium mb-1" %>
          <%= f.password_field :password, required: true,
                class: "border p-3 w-full rounded-lg" %>
        </div>

        <%= f.submit "ログインする",
            class: "w-full bg-blue-600 hover:bg-blue-700 active:bg-blue-800 mt-4 text-white py-3 rounded-lg text-lg font-semibold transition-colors cursor-pointer" %>

      <% end %>

      <div class="text-center mt-4">
        <%= link_to "パスワードを忘れた方はこちら",
              new_user_password_path,
              class: "text-sm text-gray-500 hover:text-blue-600" %>
      </div>

      <div class="my-6 border-t"></div>

      <div class="text-center">
        <p class="text-sm text-gray-500">
          アカウントをお持ちでないですか？
          <%= link_to "新規作成",
                new_user_registration_path,
                class: "text-blue-600 hover:underline ml-1" %>
        </p>
      </div>
    </div>

    <!-- ゲスト利用 -->
    <div class="text-center">
      <%= link_to root_path do %>
        <button class="w-full py-3 rounded-lg border text-gray-600 hover:text-black">
          ログインせずに使ってみる
        </button>
      <% end %>
    </div>

  </div>
</div>